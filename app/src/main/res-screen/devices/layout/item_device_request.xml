<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/spacing_normal"
              android:background="@drawable/primary_bottom_frame"
              android:orientation="vertical"
              android:padding="@dimen/spacing_normal"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            style="@style/value_TextView.XS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="New Device Request"/>


        <ImageView
            android:id="@+id/btnAccept"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/border_frame_white"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/spacing_normal"
            android:src="@drawable/ic_check"
            android:text=""/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/btnAccept"/>

        <ImageView
            android:id="@+id/btnReject"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/btnAccept"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/btnAccept"
            android:layout_below="@+id/imageView2"

            android:background="@drawable/border_frame_white"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/spacing_normal"
            android:src="@drawable/ic_clear"
            android:text=""/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnReject"
            android:layout_below="@id/textView"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_normal"
            app:srcCompat="@drawable/img_mobile"/>

        <TextView
            android:id="@+id/txtRequestID"

            style="@style/AppTheme.TextAppearance.Digit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"

            android:paddingBottom="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingStart="@dimen/spacing_normal"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_larger"
            tools:text="000000"/>


        <TextView
            android:id="@+id/txtRequestDevice"
            style="@style/value_TextView.S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/font_huge"
            tools:text="iPhone6s"/>


    </RelativeLayout>


</LinearLayout>