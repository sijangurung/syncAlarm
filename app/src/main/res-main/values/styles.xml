<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>

        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Styles -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomButton" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/roboto/Roboto_Regular.ttf</item>
        <item name="android:background">@color/colorAccent</item>
    </style>


    <!--TEXTS -->
    <style name="AppTheme.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/roboto/Roboto_Regular.ttf</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="AppTheme.TextAppearance">
        <item name="fontPath">fonts/roboto/Roboto_Medium.ttf</item>
    </style>

    <style name="AppTheme.TextAppearance.Bold" parent="AppTheme.TextAppearance">
        <item name="fontPath">fonts/roboto/Roboto_Bold.ttf</item>
    </style>

    <style name="AppTheme.TextAppearance.Digit">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/alarmclock.ttf</item>
    </style>


    <!--LABEL VIEW N , S , XS -->
    <style name="label_TextView" parent="AppTheme.TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="label_TextView.S" parent="label_TextView">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="label_TextView.XS" parent="label_TextView">
        <item name="android:textSize">@dimen/font_small_minus</item>
    </style>


    <!--VALUE VIEW XS, S , N , L , XL-->
    <style name="value_TextView" parent="AppTheme.TextAppearance">
        <item name="android:textColor">@color/charcoal_gray</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="value_TextView.XS" parent="value_TextView">
        <item name="android:textSize">@dimen/font_small_minus</item>
    </style>

    <style name="value_TextView.S" parent="value_TextView">
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="value_TextView.L" parent="value_TextView">
        <item name="android:textSize">@dimen/font_large</item>
    </style>
    <style name="value_TextView.XL" parent="value_TextView">
        <item name="android:textSize">@dimen/font_larger</item>
    </style>


</resources>
